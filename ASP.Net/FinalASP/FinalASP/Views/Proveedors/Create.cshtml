@model FinalASP.Models.Proveedor

@{
    ViewBag.Title = "Registrar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-md-offset-1">
    <div class="card card-raised">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="header header-primary text-left">
                <h5 style="margin-left:30px;margin-bottom:5px;">Registrar Proveedor</h5>
                <small style="margin-left:30px;margin-top:1px;">Complete los campos</small>
            </div>
            <div class="content col-md-10 col-md-offset-1">

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">shopping_cart</i>
                    </span>
                    <div class="form-group is-empty">
                        @Html.EditorFor(model => model.Nit, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nit" } })
                        @Html.ValidationMessageFor(model => model.Nit, "", new { @class = "text-danger" })
                        <span class="material-input"></span>
                    </div>
                </div>

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">shopping_basket</i>
                    </span>
                    <div class="form-group is-empty">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        <span class="material-input"></span>
                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">local_offer</i>
                    </span>
                    <div class="form-group is-empty">
                        @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Direccion" } })
                        @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
            <div class="footer text-center col-md-offset-6" style="padding-bottom:20px;">
                <a href="/Proveedors" class="btn btn-default">Volver</a>
                <button class="btn btn-success" type="submit">Registrar<div class="ripple-container"></div></button>
            </div>
        }
    </div>

</div>


