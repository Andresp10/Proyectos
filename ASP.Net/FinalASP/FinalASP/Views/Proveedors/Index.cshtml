    <div class="card card-raised">
        <div class="header header-primary text-left">
            <h5 style="margin-left:30px;margin-bottom:5px;">Listado de proveedores</h5>
            <a href="/Proveedors/Create" class="btn-tooltip pull-right">
                <i data-toggle="tooltip" data-placement="right" title="" data-container="body" data-original-title="Nuevo" class="material-icons btn-tooltip" style="color:#ecf0f1;font-size:50px;margin-top:-60px;margin-right:20px;">add_circle</i>
                <div class="ripple-container"></div>
            </a>
        </div>
        <div class="content col-md-10 col-md-offset-1">
            <table class="table display" id="example">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Direccion)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Proveedors", new { id = item.idProveedor })" class="btn-tooltip" data-toggle="tooltip" data-placement="bottom" title="" data-container="body" data-original-title="Editar">
                                    <i class="material-icons" style="color:#3498db">create</i>
                                    <div class="ripple-container"></div>
                                </a> |
                                <a href="@Url.Action("Details", "Proveedors", new { id = item.idProveedor })" class="btn-tooltip" data-toggle="tooltip" data-placement="bottom" title="" data-container="body" data-original-title="Ver">
                                    <i class="material-icons" style="color:#27ae60">visibility</i>
                                    <div class="ripple-container"></div>
                                </a> |
                                <a href="@Url.Action("Delete", "Proveedors", new { id = item.idProveedor })" class="btn-tooltip" data-toggle="tooltip" data-placement="bottom" title="" data-container="body" data-original-title="Eliminar">
                                    <i class="material-icons" style="color:#f33c29">delete</i>
                                    <div class="ripple-container"></div>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
