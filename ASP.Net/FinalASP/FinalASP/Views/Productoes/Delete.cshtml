@model FinalASP.Models.Producto

@{
    ViewBag.Title = "Eliminar proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-md-offset-1">
    <div class="card card-raised">
        <div class="header header-primary text-left">
            <h5 style="margin-left:30px;margin-bottom:5px;">Eliminar producto</h5>
            <small style="margin-left:30px;margin-top:1px;">¿Seguro que desea eliminar el producto?</small>
        </div>
        <div class="content col-md-10 col-md-offset-1">

            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Referencia)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Referencia)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Precio)
                </dd>

                <dt>
                    Nit del proveedor
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Proveedor1.Nombre)
                </dd>

            </dl>

        </div>
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="footer text-center col-md-offset-6" style="padding-bottom:20px;">
                    <a href="/Productoes" class="btn btn-default">Volver</a>
                    <button class="btn btn-danger" value="Delete" type="submit">Eliminar producto<div class="ripple-container"></div></button>
                </div>
            }
        </div>
    </div>
</div>




