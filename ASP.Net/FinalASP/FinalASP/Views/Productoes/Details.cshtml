@model FinalASP.Models.Producto

@{
    ViewBag.Title = "Detalles del producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-md-offset-1">
    <div class="card card-raised">
        <div class="header header-primary text-left">
            <h5 style="margin-left:30px;margin-bottom:5px;">Detalles del producto</h5>
        </div>
        <div class="content col-md-10 col-md-offset-1">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Referencia)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Referencia)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Precio)
                </dd>

                <dt>
                    Nit del proveedor
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Proveedor1.Nit)
                </dd>

            </dl>

        </div>
        <div class="footer text-center col-md-offset-6" style="padding-bottom:20px;">
            <a href="/Productoes" class="btn btn-default">Volver</a>
            <a href="@Url.Action("Edit", "Productoes", new { id = Model.idProducto })" class="btn btn-warning" type="submit">Editar</a>
        </div>
    </div>
</div>

