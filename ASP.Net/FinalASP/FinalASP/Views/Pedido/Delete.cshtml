@model FinalASP.Models.Pedido

@{
    ViewBag.Title = "Eliminar Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-md-offset-1">
    <div class="card card-raised">
        <div class="header header-primary text-left">
            <h5 style="margin-left:30px;margin-bottom:5px;">Eliminar Pedido</h5>
            <small style="margin-left:30px;margin-top:1px;">¿Realmente desea eliminar el pedido?</small>
        </div>
        <div class="content col-md-10 col-md-offset-1">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Estado)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Direccion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Productos)
                    
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Productos)
                </dd>

                <dt>
                    Cliente
                   
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cliente1.Email)
                </dd>

            </dl>

        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="footer text-center col-md-offset-6" style="padding-bottom:20px;">
                <a href="/Pedido" class="btn btn-default">Volver</a>
                <button class="btn btn-danger" value="Delete" type="submit">Eliminar<div class="ripple-container"></div></button>
            </div>
        }

    </div>
</div>









