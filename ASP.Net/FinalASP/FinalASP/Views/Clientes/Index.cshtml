@model IEnumerable<FinalASP.Models.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-10 col-md-offset-1">
    <div class="card card-raised">
        <div class="header header-primary text-left">
            <h5 style="margin-left:30px;margin-bottom:5px;">Listado de clientes</h5>
        </div>
        <div class="content col-md-10 col-md-offset-1">


            <table class="table display" id="example">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <a href="@Url.Action("Delete", "Clientes", new { id = item.idCliente })" class="btn-tooltip">
                                    <i data-toggle="tooltip" data-placement="bottom" title="" data-container="body" data-original-title="Eliminar" class="material-icons btn-tooltip" style="color:#f33c29">delete</i>
                                    <div class="ripple-container"></div>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>

<script>
    $(document).ready( function () {
        $('#example').DataTable();
    } );
</script>

